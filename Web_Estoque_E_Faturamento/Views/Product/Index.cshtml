@model IEnumerable<Web_Estoque_E_Faturamento._Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutDashboard";
}


<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4"><div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Gerenciamento  de Produtos Cadastrados</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">Exportar</button>
            <button type="button" class="btn btn-sm btn-outline-secondary">Compatilhar</button>
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#NewProductModal">
              Criar novo produto
            </button>
            <!-- Modal -->
            <div class="modal fade" id="NewProductModal" tabindex="-1" aria-labelledby="NewProductModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="NewProductModalLabel">Informações</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                        <form action="/Product/Create" method = "Post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-3">
                              <label for="CodeProductLabel" class="form-label">Código do Produto</label>
                              <input type="text" class="form-control" id="CodeProductLabel" name="Code" placeholder="(Por favor, coloque o código original do produto, pois facilitará as pesquisas futuramente)">
                            </div>
                            <div class="mb-3">
                              <label for="NameProductLabel" class="form-label">Nome do Produto</label>
                              <input type="text" maxlength="300" class="form-control" name="Name" id="NameProductLabel" placeholder="Digite o nome do produto">
                            </div>
                            <div class="mb-3">
                              <label for="DescriptionProductLabel" class="form-label">Descrição do Produto</label>
                              <textarea class="form-control" id="DescriptionProductLabel" name="Description" rows="3"></textarea>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <input type="submit" value="Create" class="btn btn-primary">
                              </div>
                         </form>

                         
                   </div>
                  
                 
                </div>
              </div>
            </div>
          </div>
          <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-calendar" aria-hidden="true"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
            Essa semana 
          </button>
        </div>
      </div>
      
    <div class="table-responsive">
        <table class="table table-sm table-striped ">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                
                    <th></th>
                 </tr>
            </thead>
            <tbody>
             @foreach (var item in Model) {
                <tr>
                    <td >
                        <p class="text-break">@Html.DisplayFor(modelItem => item.Code)</p> 
                    </td>
                    <td>
                        <p class="text-break">@Html.DisplayFor(modelItem => item.Name)</p> 
                    </td>
                    <td>
                        <p class="text-break">@Html.DisplayFor(modelItem => item.Description)</p>
                        
                    </td>
               
                    <td>

                        <a href="/Product/Edit/@item.Id" asp-route-id="@item.Id">Edit</a> |
                        
                         @Html.ActionLink("Detalhes","Details","Product",new {id=@item.Id})
                         
                        
                        <a asp-action="/Product/Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <table class="table">
        
    </table>

</main>



<div>
    <a asp-action="Index">Back to List</a>

</div>

