@model Web_Estoque_E_Faturamento._Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Product" method ="POST" >
            @Html.AntiForgeryToken()
            
            <input type="hidden" asp-for="id" value ="@Model.Id" />
            <div class="form-group">
                <label asp-for="Code" class="control-label">Code</label>
                @Html.EditorFor(model => model.Code)

                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input name = "Name" type ="text"  class="form-control" value = "@Model.Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <input name = "Description" type ="text" class="form-control" value ="@Model.Description"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
