@model Web_Estoque_E_Faturamento._Models.ProductListReminderToBuyWithoutUseProductAlreadyRegistered[]


@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutDashboard";
}

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4"><div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
        <figure class="text-center">
            <blockquote class="blockquote">
               <p><h3>Informe qual é o produto que precisa ser comprado</h3></p>
            </blockquote>
            
        </figure>
        <div class="input-group">
            <form asp-action ="Create" asp-controller="ProductListReminderToBuyWithoutUseProductAlreadyRegistered" method="POST">
                @Html.AntiForgeryToken()
                <input type="checkbox" name="AlreadyBuyed" hidden/>

                <input type="text" hidden name="DateOfCreation" value="@DateTime.Now" />
                <input required type="text" name = "CodeOfProduct" placeholder="Código do produto" aria-label="First name" class="form-control">    
                <input required type="text" name="NameOfProduct" placeholder= "Nome do produto" aria-label="Last name" class="form-control">
                <input class="btn btn-primary" type="submit" value="Registrar">

            </form>
            
            
        </div>
@foreach (var item in Model)
{
    <h1>@item.NameOfProduct</h1>
    <h1>@item.CodeOfProduct</h1>
    <h1>@item.DateOfCreation</h1>

}
            


